<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:picker="clr-namespace:Syncfusion.Maui.Toolkit.Picker;assembly=Syncfusion.Maui.Toolkit"
             xmlns:inputLayout="clr-namespace:Syncfusion.Maui.Toolkit.TextInputLayout;assembly=Syncfusion.Maui.Toolkit"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Toolkit.Buttons;assembly=Syncfusion.Maui.Toolkit"
             x:Class="PickerDecisionGuideSample.Pages.DateTimePickersPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="#FFFFFF" Stroke="#E0E0E0" >
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16" />
            </Border.StrokeShape>
            <Border.Padding>
                <OnPlatform x:TypeArguments="Thickness" Default="20" />
            </Border.Padding>

            <VerticalStackLayout Spacing="16" WidthRequest="360">
                <Label Text="REMINDER" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>

                <Border Stroke="#E6E6E6" BackgroundColor="#FAFAFA" StrokeShape="RoundRectangle 8" Padding="8" >
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8" VerticalOptions="Center">
                        <Path WidthRequest="22" HeightRequest="22" VerticalOptions="Center" Fill="#D32F2F"
                              Data="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.9 2 2 2zm6-6V11c0-3.07-1.63-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5S10.5 3.17 10.5 4v.68C7.63 5.36 6 7.92 6 11v5l-1.7 1.7c-.2.2-.3.45-.3.71V19h16v-.59c0-.26-.11-.51-.29-.7L18 16z"/>
                        <inputLayout:SfTextInputLayout Grid.Column="1" Hint="Title" ReserveSpaceForAssistiveLabels="False">
                            <Entry x:Name="titleEntry" HeightRequest="40"/>
                        </inputLayout:SfTextInputLayout>
                    </Grid>
                </Border>

                <Border Stroke="#E6E6E6" BackgroundColor="#FAFAFA" StrokeShape="RoundRectangle 8" Padding="8">
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                        <Path WidthRequest="22" HeightRequest="22" VerticalOptions="Center" Fill="#333333"
                              Data="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-2 .9-2 2v12c0 1.1.89 2 2 2h14c1.11 0 2-.9 2-2V6c0-1.1-.89-2-2-2zm0 14H5V9h14v9zM7 11h5v5H7z"/>
                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                            <Label Text="Date and Time" FontSize="12" TextColor="#888888"/>
                            <Label x:Name="dateTimeText" FontSize="14"/>
                        </VerticalStackLayout>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDateTimeFieldTapped"/>
                        </Grid.GestureRecognizers>
                    </Grid>
                </Border>

                <buttons:SfButton x:Name="saveButton" Text="SAVE" CornerRadius="24" HeightRequest="44" HorizontalOptions="Center" WidthRequest="160" BackgroundColor="#512BD4" TextColor="#FFFFFF" Clicked="OnSaveClicked"/>

                <picker:SfDateTimePicker x:Name="reminderDateTimePicker" Background="Transparent" Mode="Dialog"
                                         OkButtonClicked="OnDateTimePickerOkButtonClicked" CancelButtonClicked="OnDateTimePickerCancelButtonClicked">
                    <picker:SfDateTimePicker.FooterView>
                        <picker:PickerFooterView ShowOkButton="True" Height="40"/>
                    </picker:SfDateTimePicker.FooterView>
                </picker:SfDateTimePicker>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
