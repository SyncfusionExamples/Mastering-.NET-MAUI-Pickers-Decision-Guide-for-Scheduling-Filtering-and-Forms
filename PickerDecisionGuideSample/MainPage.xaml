<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:button="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:vm="clr-namespace:PickerDecisionGuideSample.ViewModels"
             x:Class="PickerDecisionGuideSample.MainPage"
             x:DataType="vm:MainViewModel"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <VerticalStackLayout.WidthRequest>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="Android" Value="350" />
                    <On Platform="iOS" Value="350" />
                    <On Platform="WinUI" Value="500" />
                    <On Platform="MacCatalyst" Value="500" />
                    <On Platform="Tizen" Value="500" />
                </OnPlatform>
            </VerticalStackLayout.WidthRequest>
            <Label Text="Syncfusion Pickers in .NET MAUI"
                   FontSize="24"
                   FontAttributes="Bold" />

            <Label Text="Choose a sample to explore"
                   FontSize="14" />

            <button:SfButton Text="Date Picker"
                             Command="{Binding NavigateDatePickerCommand}" />

            <button:SfButton Text="Time Picker"
                             Command="{Binding NavigateTimePickerCommand}" />

            <button:SfButton Text="Date Time Picker"
                             Command="{Binding NavigateDateTimePickerCommand}" />

            <button:SfButton Text="Pickers"
                             Command="{Binding NavigatePickerCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
